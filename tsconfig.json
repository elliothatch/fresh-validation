{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",

    "declaration": true,
    "declarationDir": "declarations",
    "outDir": "build",
    "sourceMap": true,

    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "baseUrl": ".",
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  }
}
